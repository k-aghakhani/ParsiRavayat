<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/persian_background"
    android:padding="16dp">

    <!-- لوگو یا تصویر الهام‌گرفته از شاهنامه -->
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_shahnameh"
        android:layout_gravity="center"
        android:contentDescription="@string/app_logo"
        android:layout_marginBottom="8dp" />

    <!-- عنوان برنامه با فونت فارسی سنتی -->
    <TextView
        android:id="@+id/tv_app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="قصه‌های ایران باستان"
        android:textSize="26sp"
        android:textColor="#4E2A1E"
        android:gravity="center"
        android:typeface="serif"
        android:fontFamily="@font/iranian_sans"
        android:paddingBottom="16dp" />

    <!-- خط تزئینی سنتی -->
    <View
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="#8C4C2F"
        android:layout_marginBottom="8dp" />

    <!-- لیست فایل‌های صوتی -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="8dp"
        android:scrollbars="vertical" />

</LinearLayout>
